<!--miniprogram/pages/map/map.wxml-->

<view style="width:100%;height:1000rps;text-align:center">
      
<map style="width:100%;height:100vh"
      id="map"
      longitude="{{coreLongitude}}"
      latitude="{{coreLatitude}}"
      scale="6"
      markers="{{markers}}"
      polyline=""
      include-points="{{markers}}"
      bindcallouttap="goTocharInfo"></map>
</view>
<van-toast id="van-toast" />
<view class="bt">
  <!-- <van-button round  icon="home-o" class="button" bindtap="goBackToHome">回到主页</van-button>
  <van-button round  icon="completed" class="button" bindtap="showAssociation">记录手账</van-button>
  <van-button round  icon="flag-o" class="button" bindtap="showPopup">继续探索 </van-button> -->
  <button class="button" bindtap="goBackToHome">
      <image style="width: 90rpx; height: 90rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx"  
    src="https://s3.bmp.ovh/imgs/2021/08/28a78ba8ba454dbf.png"
    class="imag"
    />
  <text class="btText" style="">回到主页</text>
  </button>
  <button class="button" bindtap="showAssociation">
  <image style="width: 90rpx; height: 90rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx"  
    src="https://s3.bmp.ovh/imgs/2021/08/8d429fe3aedfd2ca.png"
    class="imag"
    />
  <text class="btText" style="">记录手账</text>
  </button>
  <button class="button" bindtap="showPopup"><image style="width: 90rpx; height: 90rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx"  
    src="https://s3.bmp.ovh/imgs/2021/08/8adc41e7c2e9b919.png"
    class="imag"
    />
  <text class="btText" style="">继续探索</text> </button>
</view>
<view class="v" style="position: fixed; left: 346rpx; top: 593rpx; width: 60rpx; height: 35rpx; display: block; box-sizing: border-box;opacity:0">信封</view>
<van-popup show="{{ show }}" bind:close="onClose" custom-style="height: 40%" position="bottom" round>

      <view wx:if="{{next_items_list.length > 0}}"> 
            <view class="popup">
                  <view class="title">
                  <text class='text_title'>选择你想要探索的下一个人物</text>
                  </view>
            <view class="next_items_list" wx:for="{{next_items_list}}" wx:for-index="idx" wx:for-item="item">
                  <nextCharItem 
                  start_char_id="{{end_char_id}}"
                  start_place_id="{{end_place_id}}"
                  end_char_id="{{item.end_char_id}}"
                  end_place_id="{{item.end_place_id}}"
                  relation="{{item.relation}}"
                  ></nextCharItem>
            </view>
            </view>
      </view>
      <view wx:else> 
            <view class="popup">
                  <view class="title">
                        <text class='text_title'>成功点亮本条故事线所有人物！</text>
                  </view>
            <button class="back_button" bindtap="goToChooseCoreChar">回到核心人物选择界面</button>
            </view>
            
      </view>
      
</van-popup>
